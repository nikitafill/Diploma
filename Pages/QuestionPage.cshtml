@page
@model DiplomaProject.Pages.QuestionPageModel
@{
    ViewData["Title"] = "Вопросы";
}

<h2>Вопросы</h2>

<button id="addQuestionButton" class="btn btn-primary" onclick="toggleForm()">Добавить вопрос</button>

<div id="addQuestionForm" style="display:none; margin-top: 20px;">
    <form method="post" asp-page-handler="Add">
        <textarea asp-for="NewQuestion.Text" class="form-control" required>Введите текст вопроса</textarea>
        <button type="submit" class="btn btn-primary" style="margin-top: 10px">Добавить</button>
        <button type="button" class="btn btn-secondary" style="margin-top: 10px" onclick="toggleForm()">Отмена</button>
    </form>
</div>

<table class="table mt-4">
    <thead>
        <tr>
            <th>ID</th>
            <th>Текст</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Model.Questions)
        {
            <tr>
                <td>@question.Id</td>
                <td>@question.Text</td>
                <td>
                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Вы уверены, что хотите удалить этот вопрос?');" style= "display: flex; gap: 5px;">
                        <input type="hidden" name="id" value="@question.Id" />
                        <button class="btn btn-danger btn-sm">Удалить</button>
                        <button class="btn btn-warning btn-sm" type="button" onclick="toggleEditForm(@question.Id)">Изменить</button>
                    </form>
                </td>
            </tr>
            <tr id="editRow-@question.Id" style="display: none;">
                <td colspan="7">
                    <form method="post" asp-page-handler="Edit">
                        <input type="hidden" name="EditedQuestion.Id" value="@question.Id" />
                        <div class="row g-2">
                            <div class="col">
                                <input class="form-control" name="EditedQuestion.Text" value="@question.Text" />
                            </div>
                            <div class="col">
                                <button type="submit" class="btn btn-success btn-sm">Сохранить</button>
                                <button type="button" class="btn btn-secondary btn-sm" onclick="toggleEditForm(@question.Id)">Отмена</button>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function toggleForm() {
        const form = document.getElementById('addQuestionForm');
        const button = document.getElementById('addQuestionButton');

        if (form.style.display === "none") {
            form.style.display = "block";
            button.style.display = "none"; 
        } else {
            form.style.display = "none";
            button.style.display = "inline-block"; 
        }
    }
</script>

<script>
    function toggleEditForm(userId) {
        const row = document.getElementById('editRow-' + userId);
        row.style.display = row.style.display === 'none' ? 'table-row' : 'none';
    }
</script>
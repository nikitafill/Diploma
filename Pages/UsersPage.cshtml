@page
@model DiplomaProject.Pages.UsersPageModel
@{
    ViewData["Title"] = "Пользователи";
}

<h2>Пользователи</h2>

<button id="addUserButton" class="btn btn-primary" onclick="toggleForm()">Добавить пользователя</button>

<div id="addUserForm" style="display:none; margin-top: 20px;">
    <form method="post" asp-page-handler="Add">
        <div class="mb-2">
            <input asp-for="NewUser.Name" placeholder="Имя" class="form-control" />
        </div>
        <div class="mb-2">
            <input asp-for="NewUser.Login" placeholder="Логин" class="form-control" />
        </div>
        <div class="mb-2">
            <input asp-for="NewUser.PasswordHash" placeholder="Пароль" class="form-control" />
        </div>
        <div class="mb-2">
            <select asp-for="NewUser.Role" class="form-select">
                @foreach (var role in Model.Roles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>
        <div class="mb-2">
            <input asp-for="NewUser.GroupName" placeholder="Группа" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
        <button type="button" class="btn btn-secondary" onclick="toggleForm()">Отмена</button>
    </form>
</div>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Логин</th>
            <th>Пароль</th>
            <th>Роль</th>
            <th>Группа</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>
                    <a asp-page="/Main" asp-route-userId="@user.Id">
                        @user.Name
                    </a>
                </td>
                <td>@user.Login</td>
                <td>@user.PasswordHash</td>
                <td>@user.Role</td>
                <td>@user.GroupName</td>
                <td>
                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Вы уверены, что хотите удалить этого пользователя?');" style="display: inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button class="btn btn-danger btn-sm">Удалить</button>
                    </form>

                    <button class="btn btn-warning btn-sm" type="button" onclick="toggleEditForm(@user.Id)">Изменить</button>
                </td>
            </tr>

            <tr id="editRow-@user.Id" style="display: none;">
                <td colspan="7">
                    <form method="post" asp-page-handler="Edit">
                        <input type="hidden" name="EditedUser.Id" value="@user.Id" />
                        <div class="row g-2">
                            <div class="col">
                                <input class="form-control" name="EditedUser.Name" value="@user.Name" />
                            </div>
                            <div class="col">
                                <input class="form-control" name="EditedUser.Login" value="@user.Login" />
                            </div>
                            <div class="col">
                                <input class="form-control" name="EditedUser.PasswordHash" value="@user.PasswordHash" />
                            </div>
                            <div class="col">
                                <select class="form-control" name="EditedUser.Role">
                                    @foreach (var role in Model.Roles)
                                    {
                                        <option value="@role" selected="@(role == user.Role)">@role</option>
                                    }
                                </select>
                            </div>
                            <div class="col">
                                <input class="form-control" name="EditedUser.GroupName" value="@user.GroupName" />
                            </div>
                            <div class="col">
                                <button type="submit" class="btn btn-success btn-sm">Сохранить</button>
                                <button type="button" class="btn btn-secondary btn-sm" onclick="toggleEditForm(@user.Id)">Отмена</button>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function toggleForm() {
        const form = document.getElementById('addUserForm');
        const button = document.getElementById('addUserButton');

        if (form.style.display === "none") {
            form.style.display = "block";
            button.style.display = "none";
        } else {
            form.style.display = "none";
            button.style.display = "inline-block";
        }
    }
</script>

<script>
    function toggleEditForm(userId) {
        const row = document.getElementById('editRow-' + userId);
        row.style.display = row.style.display === 'none' ? 'table-row' : 'none';
    }
</script>
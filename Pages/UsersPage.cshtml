@page
@model DiplomaProject.Pages.UsersPageModel
@{
    ViewData["Title"] = "Пользователи";
}

<h2>Пользователи</h2>

<button id="addUserButton" class="btn btn-primary" onclick="toggleForm()">Добавить пользователя</button>

<div id="addUserForm" style="display:none; margin-top: 20px;">
    <form method="post" asp-page-handler="Add">
        <div class="mb-2">
            <input asp-for="NewUser.Name" placeholder="Имя" class="form-control" />
        </div>
        <div class="mb-2">
            <input asp-for="NewUser.Login" placeholder="Логин" class="form-control" />
        </div>
        <div class="mb-2">
            <input asp-for="NewUser.PasswordHash" placeholder="Пароль" class="form-control" />
        </div>
        <div class="mb-2">
            <select asp-for="NewUser.Role" class="form-select">
                @foreach (var role in Model.Roles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>
        <div class="mb-2">
            <input asp-for="NewUser.GroupName" placeholder="Группа" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
        <button type="button" class="btn btn-secondary" onclick="toggleForm()">Отмена</button>
    </form>
</div>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Логин</th>
            <th>Пароль</th>
            <th>Роль</th>
            <th>Группа</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>
                    <a asp-page="/Main" asp-route-userId="@user.Id">
                        @user.Name
                    </a>
                </td>
                <td>@user.Login</td>
                <td>@user.PasswordHash</td>
                <td>@user.Role</td>
                <td>@user.GroupName</td>
                <td>
                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Вы уверены, что хотите удалить этого пользователя?');" style= " display: flex; gap: 5px;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button class="btn btn-danger btn-sm">Удалить</button>
                        <button class="btn btn-warning btn-sm">Изменить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function toggleForm() {
        const form = document.getElementById('addUserForm');
        const button = document.getElementById('addUserButton');

        if (form.style.display === "none") {
            form.style.display = "block";
            button.style.display = "none";
        } else {
            form.style.display = "none";
            button.style.display = "inline-block";
        }
    }
</script>